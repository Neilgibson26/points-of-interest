{{> logged-in}}

<div class="container">
    <div class="card mt-5" style="width: 90%;">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">First name: {{user.firstName}} </li>
        <li class="list-group-item">Last name: {{user.lastName}}</li>
        <li class="list-group-item">Email: {{user.email}} </li>
        <li class="list-group-item">Password: {{user.password}} </li>
        <li class="list-group-item">Account type: {{user.accountType}} </li>

    </ul>
    <div class="card-footer">
        <p class="text-center" style="width: 100%;">
            <a href="/edit/{{user._id}}" class="btn btn-primary">Edit Profile</a>

        </p>
    </div>
    </div>
</div>